.comment{ id: "comment_#{comment.id}"}
  .commenter
    = link_to comment.user.email, user_path(comment.user.id)
  .comment-content
    = comment.content
- if permitted_to_delete_comment?(comment)
  = link_to 'Delete', book_comment_path(comment.book.id, comment.id),  method: :delete, remote: true,  class: "btn-comments-delete"
