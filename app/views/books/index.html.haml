.row
  .col
    %h1 Books
    %h4 Top rated books
.row
  .col
    %table
      %thead
        %tr
          %th Title
          %th Author
          %th{:colspan => "3"}  Status

      %tbody
        - @top_books.each do |book|
          %tr
            %td= link_to "#{book.title}", book
            %td= book.author
            %td= book.status
    %br/
.row
  .col
    = link_to 'New Book', new_book_path

.row
  .col
    #all_books
      %table
        %thead
          %tr
            %th Title
            %th Author
            %th Status
            %th{:colspan => "3"}

        %tbody
          - @books.each do |book|
            %tr
              %td= book.title
              %td= book.author
              %td= book.status

              %td= link_to 'Show', book
              %td= link_to 'Edit', edit_book_path(book)
              %td= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }
      %br/

      