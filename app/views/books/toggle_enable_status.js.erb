<% if @book.status == false %>
    $("#bookid").html('Take').removeClass('btn-warning').addClass('btn-success');
    $("#history-section").load(location.href+" #history-section","");

<% else %>
    $("#bookid").html('Return').removeClass('btn-success').addClass('btn-warning');
    addHistoryToBook("<%= j render 'histories/show', history: @history %>");
<% end %>
