%p#notice= notice
.row
  .col-12
    = @book.title
    %br
    = @book.author
.row
  .col-6
    %strong Votes:
    = @book.votes
  .col-6
    = link_to "#{ @book.status ? 'Return' : 'Take' }", toggle_enable_status_book_path(@book), class: "bookid", id: "bookid", method: :put, remote: true, class: "btn btn-xs btn-#{ @book.status ? 'warning' : 'success'}"
.row
  .col-4
    = image_tag @book.image_url(:small)
  .col-8
    %strong Description:
    = @book.description

= link_to 'Edit', edit_book_path(@book)
= link_to 'Back', books_path
#comments-section
  = render @book.comments

= form_for [ @book, @book.comments.build ], remote: true  do |form|
  = form.text_area :content, class: "form-control"
  %br/
  = form.submit class: "btn btn-light"

#history-section
  = render @book.histories
